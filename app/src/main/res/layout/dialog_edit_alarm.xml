<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.PickerActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_date_container"
                android:visibility="gone">
                <TextView
                    android:id="@+id/dialog_date_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textAppearance="@style/SectionTitleText" />

                <LinearLayout
                    android:id="@+id/dialog_date_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dialog_date_text"
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:onClick="launchDatePicker"/>

                    <ImageView
                        android:id="@+id/dialog_date_edit"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_edit"
                        android:onClick="launchDatePicker" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_days_container"
            android:visibility="gone">
                <TextView
                    android:id="@+id/dialog_days_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:textAppearance="@style/SectionTitleText" />

                <LinearLayout
                    android:id="@+id/dialog_days_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/dialog_days_text"
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:onClick="launchWeekdaysPicker"/>

                    <ImageView
                        android:id="@+id/dialog_days_edit"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_edit"
                        android:onClick="launchWeekdaysPicker"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textAppearance="@style/SectionTitleText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_time_text"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:onClick="launchTimePicker"/>

                <ImageView
                    android:id="@+id/dialog_time_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit"
                    android:onClick="launchTimePicker"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ringtone"
                android:textAppearance="@style/SectionTitleText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_ringtone_text"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:onClick="launchRingtonePicker"/>

                <ImageView
                    android:id="@+id/dialog_ringtone_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit"
                    android:onClick="launchRingtonePicker"/>

            </LinearLayout>

            <TextView
                android:id="@+id/dialog_vibration_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vibration"
                android:textAppearance="@style/SectionTitleText" />

            <LinearLayout
                android:id="@+id/dialog_vibration_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_vibration_text"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:onClick="launchVibrationPicker"/>

                <ImageView
                    android:id="@+id/dialog_vibration_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit"
                    android:onClick="launchVibrationPicker"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/station"
                android:textAppearance="@style/SectionTitleText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_station_text"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:onClick="launchStationSteigPicker"/>

                <ImageView
                    android:id="@+id/dialog_station_edit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit"
                    android:onClick="launchStationSteigPicker"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Button bar solution from:
    http://stackoverflow.com/questions/2318775/how-to-create-fixed-footer-in-android-layout#5796606 -->
        <LinearLayout
            android:layout_below="@id/content"
            style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--suppress AndroidMissingOnClickHandler -->
            <Button
                android:layout_weight="1"
                android:id="@+id/dialog_button_cancel"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:onClick="dismissDialog"
                tools:ignore="OnClick" />
            <!--suppress AndroidMissingOnClickHandler -->
            <Button
                android:layout_weight="1"
                android:id="@+id/dialog_button_delete"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:onClick="deleteAlarm"
                tools:ignore="OnClick" />
            <Button
                android:layout_weight="1"
                android:id="@+id/dialog_button_ok"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:onClick="saveAndScheduleAlarm" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>